@model Post
<li class="list-group-item container p-0" id="Post_@Model.Id">
	<div class="row">
		<div class="d-flex flex-column justify-content-center col-2">
			<bold class="align-middle text-center">@Model.CreatorUserName</bold>
			<small class="align-middle text-center">@Model.CreatedDate.ToString("dd/MM/yyyy")</small>
			<small class="align-middle text-center">@Model.CreatedDate.ToString("HH:mm")</small>
		</div>
		<div class="d-flex flex-column justify-content-center col-9">
			<p class="text-center font-italic">@Model.Message</p>
		</div>
		<div class="d-flex flex-column justify-content-center col-1">
			@if (Model.CreatorUserName == User.Identity.Name && User.Identity.Name!=null)
			{
				<button class="btn bg-secondary p-2 btn-sm" data-toggle="ajax-edit" data-id="Post_@Model.Id" data-route="/Post/Edit/@Model.Id">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
						<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
						<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
					</svg>
				</button>
			}
		</div>
	</div>
</li>